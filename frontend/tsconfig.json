
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "es2017",
        "es2016",
        "es2015",
        "esnext",
        "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".next/types/validator.js", "src/app/hooks/useContactForm.js"],
  "exclude": ["node_modules"]
}
